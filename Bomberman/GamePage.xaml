<Page x:Class="Bomberman.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bomberman"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      x:Name="gamePage"
      Title="GamePage">

    <Grid x:Name="gameContainer">
        <Label x:Name="gameTime" Content="{Binding TimeLeft, FallbackValue=0}"/>
        <Canvas x:Name="gameBoard" Height="585" Width="675" Margin="0,55,125,10" />
    </Grid>
</Page>
